<Window x:Class="AreYouSleeping.AwakePrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AreYouSleeping"
        mc:Ignorable="d"
        Title="Are you sleeping" Height="200" Width="300"
        Topmost="True" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Prompt, FallbackValue=Are you sleeping?}" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
        <TextBlock Grid.Row="1" Text="{Binding Remaining, FallbackValue=30s?}" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Content="Yes" Margin="6" Click="Yes_Click"/>
            <Button Grid.Column="2" Margin="6" Content="No, restart sleep timer" Click="No_Click"/>
        </Grid>

    </Grid>
</Window>
